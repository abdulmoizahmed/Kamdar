<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/logo1"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="یہ قرض اندراج اسکرین  ہے "
            android:id="@+id/tv_inpLoan_heading"
            android:layout_gravity="center_horizontal" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="18sp"

        android:id="@+id/tv_loan_CNIC"
         />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spin_loan_name"

        android:entries="@array/haari"
        android:spinnerMode="dropdown">


        <requestFocus/>
    </Spinner>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_loan_landNumber"
        android:textSize="18sp"

       />
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spin_loan_landNumber"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_loan_amount"
        android:textSize="18sp"
 />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_loan_amount"
        android:layout_below="@+id/tv_loan_landNumber"
        android:layout_alignRight="@+id/tv_loan_amount"
        android:layout_alignEnd="@+id/tv_loan_amount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"

        android:id="@+id/tv_loan_date"
        android:layout_below="@+id/et_loan_amount"
        android:layout_alignRight="@+id/et_loan_amount"
        android:layout_alignEnd="@+id/et_loan_amount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/et_loan_date"
        android:layout_below="@+id/tv_loan_date"
        android:layout_alignRight="@+id/tv_loan_date"
        android:layout_alignEnd="@+id/tv_loan_date" />

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="fill_parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:text="مزید اضافہ"
                android:id="@+id/refresh"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:text="جمع کردو"
                android:id="@+id/btn_submit"
                />



        </LinearLayout>
    </LinearLayout>
</ScrollView>