<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0000"

    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:fillViewport="false"
    android:id="@+id/fg">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="*یہاں سے نیا اندراج کریں"
        android:gravity="center"
        android:paddingBottom="20dp"
        />




    <LinearLayout
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_marginTop="7dp"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <Button
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:background="@drawable/button_style"
            android:layout_marginLeft="10dp"
            android:layout_weight="40"

            android:id="@+id/btn_newzameen"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_style"
        android:text=""
        android:id="@+id/btn_newfasl"
        android:layout_alignTop="@+id/btn_newzameen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />

</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="7dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:layout_weight="40"
        android:layout_marginLeft="10dp"

        android:text=""
        android:id="@+id/btn_newhaari"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:layout_marginLeft="10dp"

        android:text=""
        android:layout_weight="40"
        android:id="@+id/btn_newkhad"
         />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="7dp"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:layout_marginLeft="10dp"

        android:text=""
        android:layout_weight="40"
        android:id="@+id/btn_newpesticides"
        android:layout_centerVertical="true"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:layout_marginLeft="10dp"

        android:text=""
        android:layout_weight="40"
        android:id="@+id/btn_newseed"
         />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="7dp"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:text=""
        android:layout_marginLeft="10dp"
        android:layout_weight="90"
        android:id="@+id/btn_newmachine"
         />



    </LinearLayout>
</LinearLayout>