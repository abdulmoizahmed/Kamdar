<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:textSize="18sp"

        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/logo1"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="یہ سروے  اسکرین  ہے  "
            android:id="@+id/tv_rozSurvey_head"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surveyCode"
            android:layout_gravity="right" />

        <EditText
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_surveyCode"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surveyCompany"
            android:layout_gravity="right" />

        <EditText
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_surveyCompany" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView38"
         />

        <Spinner

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin_survey_landno"
        android:layout_below="@+id/textView38"
        android:layout_alignRight="@+id/textView38"
        android:layout_alignEnd="@+id/textView38"
            android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView39"
        android:layout_below="@+id/spin_survey_landno"
        android:layout_alignRight="@+id/spin_survey_landno"
        android:layout_alignEnd="@+id/spin_survey_landno" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText25"
        android:layout_below="@+id/textView39"
        android:layout_alignRight="@+id/textView39"
        android:layout_alignEnd="@+id/textView39" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView40"
        android:layout_below="@+id/editText25"
        android:layout_alignRight="@+id/editText25"
        android:layout_alignEnd="@+id/editText25" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText26"
        android:layout_below="@+id/textView40"
        android:layout_alignRight="@+id/textView40"
        android:layout_alignEnd="@+id/textView40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView41"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/editText26"
        android:layout_alignEnd="@+id/editText26" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText27"
        android:layout_below="@+id/textView41"
        android:layout_alignRight="@+id/textView41"
        android:layout_alignEnd="@+id/textView41" />

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="fill_parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:text="مزید اضافہ"
                android:id="@+id/refresh"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:text="جمع کردو"
                android:id="@+id/btn_submit"
                />



        </LinearLayout>
    </LinearLayout>
</ScrollView>