<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:fillViewport="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.moizahmed.kamiui.MainActivity">


    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="24dp"
        android:id="@+id/lout"
        android:paddingBottom="25dp"
        android:paddingRight="24dp"
        android:weightSum="1">

    <ImageView android:src="@drawable/logo1"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="٭یہ مین اسکرین ہے"
        android:textColor="#ffffff"
        android:id="@+id/textView60"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>
 <Button
     android:id="@+id/indiraj"
     android:layout_width="fill_parent"
     android:textSize="20sp"
     android:background="@drawable/button_style"
     android:layout_height="wrap_content"
     android:layout_below="@+id/lout"

     android:text="indiraj"
     android:textColor="#ffffff"
     android:onClick="OnEntry"
     />

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/indiraj"
        android:alpha="0.5"
        app:ael_duration="500"

        app:ael_interpolator="bounce"
        app:ael_orientation="vertical">

        <include android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/main_newinput"
            />


    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>



    <Button
        android:id="@+id/btn_roz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:background="@drawable/button_style"
        android:layout_below="@+id/expandableLayout"
        android:text="Roznamcha"
        android:onClick="OnRoznamcha"
        android:textColor="#ffffff"
        />


    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/roznamcha_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_roz"
        android:alpha="0.5"
        app:ael_duration="500"

        app:ael_interpolator="bounce"
        app:ael_orientation="vertical">

        <include android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/roznamcha"
            />


    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:background="@drawable/button_style"
        android:layout_below="@+id/roznamcha_Layout"
        android:text="Malomat"
        android:onClick="OnMaloomat"
        android:textColor="#ffffff"
        android:id="@+id/btn_info"
        />


    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/malomat_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_info"
        android:alpha="0.5"
        app:ael_duration="500"

        app:ael_interpolator="bounce"
        app:ael_orientation="vertical">

        <include android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/main_malomat"
            />


    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:background="@drawable/button_style"
        android:layout_below="@+id/malomat_Layout"
        android:text="Report"
        android:onClick="OnReport"
        android:textColor="#ffffff"
        android:id="@+id/btn_report"
        />


    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/report_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_report"
        android:alpha="0.5"
        app:ael_duration="500"

        app:ael_interpolator="bounce"
        app:ael_orientation="vertical">

        <include android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/report_main"
            />


    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>



</RelativeLayout>
</ScrollView>